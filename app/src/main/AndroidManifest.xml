<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kfoszcz.makaoscore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".view.GameListActivity"
            android:label="@string/app_name">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PlayerListActivity"
            android:label="@string/add_game" />
        <activity
            android:name=".view.AddPlayerActivity"
            android:label="@string/add_player" />
        <activity
            android:name=".view.ScoreListActivity"
            android:label="@string/score_list" />
        <activity
            android:name=".view.AddScoreActivity"
            android:label="@string/add_score" />
        <activity
            android:name=".view.StatsActivity"
            android:label="@string/title_activity_stats" />
    </application>

</manifest>