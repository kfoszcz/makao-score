<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center">

    <TextView
        style="@style/Text.Deal"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_score_declared"
            style="@style/Text.Declared"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            tools:text="8" />

        <TextView
            android:id="@+id/txt_score_points"
            style="@style/Text.Points"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_score_declared"
            android:layout_toRightOf="@+id/txt_score_declared"
            tools:text="18" />

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_score_declared2"
            style="@style/Text.Declared"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            tools:text="8" />

        <TextView
            android:id="@+id/txt_score_points2"
            style="@style/Text.Points"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_score_declared2"
            android:layout_toRightOf="@+id/txt_score_declared2"
            tools:text="182" />

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_score_declared3"
            style="@style/Text.Declared"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            tools:text="99" />

        <TextView
            android:id="@+id/txt_score_points3"
            style="@style/Text.Points"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_score_declared3"
            android:layout_toRightOf="@+id/txt_score_declared3"
            tools:text="228" />

    </RelativeLayout>



</LinearLayout>