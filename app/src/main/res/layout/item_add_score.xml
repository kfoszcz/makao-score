<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <TextView
        android:id="@+id/item_add_score_initial"
        style="@style/Text.Primary"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/item_add_score_points"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="M"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/item_add_score_points"
        style="@style/Text.Secondary"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="142"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/item_add_score_declared"
        style="@style/Text.Primary"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_add_score_initial"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12"
        android:layout_marginLeft="16dp" />

    <ImageButton
        style="@style/buttonImage"
        android:id="@+id/item_add_score_btn_success"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_done_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_add_score_btn_half_high"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        style="@style/buttonImage"
        android:id="@+id/item_add_score_btn_half_high"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_drop_up_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_add_score_btn_half_low"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/item_add_score_btn_half_low"
        style="@style/buttonImage"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_add_score_btn_fail"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        style="@style/buttonImage"
        android:id="@+id/item_add_score_btn_fail"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_clear_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>